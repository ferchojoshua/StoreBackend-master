@model Store.Entities.Producto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Familia" class="control-label"></label>
                <select asp-for="Familia" class="form-control" asp-items="ViewBag.Familia"></select>
                <span asp-validation-for="Familia" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="TipoNegocio.Id" class="control-label"></label>
                <select asp-for="TipoNegocio.Id" class="form-control" asp-items="ViewBag.TipoNegocio"></select>
                <span asp-validation-for="TipoNegocio.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
